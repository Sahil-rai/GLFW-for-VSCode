{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++ Debug (MinGW)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cutable.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // Эта строка решает проблему "Could not find the task"
            "preLaunchTask": "C/C++: g++.exe build active file" 
        }
    ]
}